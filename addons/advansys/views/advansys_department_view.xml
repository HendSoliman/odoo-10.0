<odoo>
    <data>
        <!--=========================Action==================-->
        <record id="advansys_department_action" model="ir.actions.act_window">
            <field name="name">Department Section</field>
            <field name="res_model">advansys.department</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!--=========================View==================-->
        <!--Tree View  For Deaprtment-->
        <record id="advansys_department_tree_view" model="ir.ui.view">
            <field name="name">Advansys Dept Tree View</field>
            <field name="model">advansys.department</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" string="Department Name"/>
                    <field name="desc" string=" Description"/>
                </tree>

            </field>
        </record>
        <!--Form View  For Department-->
        <record id="advansys_department_form_view" model="ir.ui.view">
            <field name="name">department Section</field>
            <field name="model">advansys.department</field>
            <field name="arch" type="xml">
                <form>
                    <group name="Information">
                        <header>

                            <button type="object"
                                    name="show_accpeted_employees"
                                    string="show Idle employees"/>

                        </header>
                        <field name="name" string="Department Name"/>
                        <field name="desc" string="Description"/>
                        <field name="employee_ids" string="Employees"/>

                    </group>


                </form>

            </field>
        </record>

        <!--==============Menu Item =================-->
        <!--Department-->
        <menuitem id="iti_department_menu"
                  name="Departments"
                  parent="advansys_section_menu"
                  action="advansys_department_action"/>
    </data>

</odoo>