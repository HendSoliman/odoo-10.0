<odoo>
    <data>
        <!--=========================Action==================-->
        <record id="advansystms_category_action" model="ir.actions.act_window">
            <field name="name">Category Section</field>
            <field name="res_model">advansystms.category</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>

        <!--=========================View==================-->
        <!-- Category kanban view specifically for hr_attendance (to check in/out) -->
        <record model="ir.ui.view" id="advansysTmscategory_module_kanban_view">
            <field name="name">custom.module.kanban</field>
            <field name="model">advansystms.category</field>
            <field name="type">kanban</field>
            <field name="arch" type="xml">
                <kanban class="o_hr_employee_kanban">
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">


                                <!--=========Detail==================-->
                                <div class="oe_kanban_details">
                                    <strong>
                                        <field name="name"/>
                                    </strong>
                                    <ul>
                                        <li>
                                            <field name="status"/>
                                        </li>
                                        <li>


                                            <div class="o_kanban_button">

                                                <button string="Active" type="object" name="active_category"
                                                        class="o_follow_btn o_follow btn btn-sm btn-primary"
                                                        attrs="{'invisible': [('status', '=', 'active')]}">
                                                    <span class="o_unfollow">Active</span>

                                                </button>
                                                <button string="Inactive" type="object" name="Inactive_category"
                                                        class="o_follow_btn o_follow btn btn-sm btn-primary"
                                                        attrs="{'invisible': [('status', '=', 'Inactive')]}">
                                                    <span class="o_unfollow">Inactive</span>

                                                </button>
                                            </div>
                                        </li>
                                    </ul>

                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>


        <!--Tree View  For Deaprtment-->
        <record id="advansys_department_tree_view" model="ir.ui.view">
            <field name="name">Advansys Category Tree View</field>
            <field name="model">advansystms.category</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" string="Category Name"/>
                    <field name="status" string="Status"/>


                </tree>

            </field>
        </record>
        <!--Form View  For Department-->
        <record id="advansys_category_form_view" model="ir.ui.view">
            <field name="name">category Section</field>
            <field name="model">advansystms.category</field>
            <field name="arch" type="xml">
                <form string="Test">
                    <sheet>

                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="Cousre Category Name"/>
                            </h1>
                            <h2>
                                <field name="status"/>
                            </h2>

                        </div>
                        <notebook>
                            <page string="Courses">
                                <group>
                                    <button type="object"
                                            name="show_active_courses_action"
                                            string="Show Active Courses"/>

                                </group>
                                <group string="Courses ">
                                    <field name="course_ids" type="html"/>

                                </group>
                            </page>

                        </notebook>
                    </sheet>
                </form>

            </field>
        </record>

        <!--==============Menu Item =================-->
        <!--Category-->

        <menuitem id="advansys_category_menu"
                  name="Category"
                  parent="advansystms_category_menuSection"
                  action="advansystms_category_action"/>
    </data>

</odoo>